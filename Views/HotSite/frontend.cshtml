@{
    ViewBag.Title = "Front End";
    Layout = "~/Views/Shared/Base/_LayoutBreadCrumbContent.cshtml";
}

@section breadcrumbs {
    <div class="ui container">
        <div class="ui grid stackable middle aligned centered">
            <div class="row one column">
                <div class="column">
                    <h1 class="text uppercase">@ViewBag.Title</h1>
                    <div class="ui breadcrumb text small uppercase">
                        <a class="section" href="/">Home</a>
                        <div class="divider"> / </div>
                        <span class="active section">Front End</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="ui grid middle aligned center aligned frontend">
    <div class="row">
        <div class="ten wide computer sixteen wide tablet sixteen wide mobile column">
            <form class="ui form">
                <div class="ui segment">
                    <div class="ui grid  very relaxed stackable middle aligned grid left aligned">
                        <div class="row two column">
                            <div class="column"> 

                                <div class="field required">
                                    <label>Nome</label>
                                    <div class="ui left icon input">
                                        <i class="user icon"></i>
                                        <input type="text" maxlength="100" name="Name" placeholder="Nome"
                                               value="" data-validate="name">
                                        
                                    </div>
                                </div> 

                                <div class="field required">
                                    <label>E-mail</label>
                                    <div class="ui left icon input">
                                        <i class="mail icon"></i>
                                        <input id="email" type="text" maxlength="100" name="Email" placeholder="E-mail"
                                               value="" data-validate="email">
                                    </div>
                                </div>

                                <div class="field required">
                                    <label>Telefone</label>
                                    <div class="ui left icon input">
                                        <i class="phone icon"></i>
                                        <input type="text" name="Phone"
                                                placeholder="(00) 00000-0000" class="masked mask_phone"
                                                data-validate="phone">
                                    </div>
                                </div>

                                <div class="field required">
                                    <label>Assunto</label>
                                    <div class="ui left icon input">
                                        <i class="comment icon"></i>
                                        <input type="text" maxlength="100" name="Subject" placeholder="Assunto"
                                               value="" data-validate="name">
                                    </div>
                                </div>
                                
                                <div class="field required">
                                    <label>Mensagem</label>
                                    <textarea maxlength="6000" name="Message"></textarea>
                                </div>

                                <div class="row">
                                    <div class="column">
                                        <button type="submit"
                                                class="ui animated button large submit primary right floated continuar"
                                                tabindex="0">
                                            <div class="visible content">Enviar</div>
                                            <div class="hidden content"> 
                                                <i class="send icon"></i>
                                            </div>
                                        </button>
                                    </div>
                                </div>

                            </div>

                            <div class="seven wide column">
                                <div class="ui card">
                                    <div class="content result-data">
                                        <div class="description">
                                            <p><strong>Nome: </strong> <span class="name"></span></p>
                                            <p><strong>E-mail: </strong> <span class="email"></span></p>
                                            <p><strong>Telefone: </strong> <span class="phone"></span></p>
                                            <p><strong>Assunto: </strong> <span class="subject"></span></p>
                                            <p><strong>Mensagem: </strong> <span class="message"></span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

